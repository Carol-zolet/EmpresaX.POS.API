{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=empresax_dev;Username=postgres;Password=minhasenha"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/empresax-pos-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors/empresax-pos-errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ 
      "FromLogContext", 
      "WithMachineName", 
      "WithThreadId",
      "WithEnvironmentName",
      "WithProcessId",
      "WithAssemblyName"
    ],
    "Properties": {
      "Application": "EmpresaX.POS.API",
      "Environment": "Development"
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "",
    "EnableAdaptiveSampling": true,
    "EnablePerformanceCounterCollectionModule": true
  },
  "Monitoring": {
    "EnableDetailedErrors": true,
    "EnablePerformanceMetrics": true,
    "SlowRequestThresholdMs": 3000,
    "AlertEmailRecipients": ["admin@empresax.com"]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "PolicyName": "CorsPolicy",
    "Origins": [
      "http://localhost:4200",
      "http://localhost:3000",
      "https://seu-frontend.com.br",
      "https://empresax-pos-api-carol-21160.azurewebsites.net"
    ]
  }
}