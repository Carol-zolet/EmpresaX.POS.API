        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5>Posição Atual</h5>
                        <h2 class="text-success" id="fluxo-saldo">Carregando...</h2>
                        <small class="text-muted" id="fluxo-data">Carregando...</small>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Movimentações Recentes</h5>
                    </div>
                    <div class="card-body" id="fluxo-movimentacoes">
                        Carregando...
                    </div>
                </div>
            </div>
        </div>
    `;
    
    const fluxo = await fetchAPI('/FluxoCaixa/posicao');
    if (fluxo && fluxo.sucesso) {
        document.getElementById('fluxo-saldo').textContent = fluxo.posicaoAtual.saldoAtualFormatado;
        document.getElementById('fluxo-data').textContent = new Date(fluxo.posicaoAtual.dataAtualizacao).toLocaleString();
        
        // Carregar movimentações
