async function loadDashboardData() {
    // Carregar fluxo de caixa
    const fluxo = await fetchAPI('/FluxoCaixa/posicao');
    if (fluxo && fluxo.sucesso) {
        document.getElementById('saldo-atual').textContent = fluxo.posicaoAtual.saldoAtualFormatado;
    }
    
    // Carregar contas a pagar
    const contas = await fetchAPI('/v1/contas-pagar');
    if (contas && contas.sucesso) {
        const pendentes = contas.contas.filter(c => c.status === 'Pendente').length;
        const vencidas = contas.contas.filter(c => c.status === 'Vencida').length;
        
        document.getElementById('contas-pendentes').textContent = pendentes;
        document.getElementById('contas-vencidas').textContent = vencidas;
        
        // Mostrar contas vencendo
        const vencendo = contas.contas
            .filter(c => c.status === 'Pendente')
            .slice(0, 5);
            
        const vencendoHtml = vencendo.map(conta => 
            '<div class="d-flex justify-content-between align-items-center mb-2">' +
            '<div><strong>' + conta.fornecedor + '</strong><br>' +
            '<small class="text-muted">' + conta.descricao + '</small></div>' +
            '<div class="text-end">' +
            '<strong>R$ ' + conta.valor + '</strong><br>' +
            '<small class="text-danger">' + conta.vencimento + '</small>' +
            '</div></div><hr>'
        ).join('');
        
        document.getElementById('contas-vencendo').innerHTML = vencendoHtml || '<p class="text-muted">Nenhuma conta vencendo</p>';
    }
    
    // Carregar conciliação
    const conciliacao = await fetchAPI('/ConciliacaoBancaria/posicao');
    if (conciliacao && conciliacao.sucesso) {
        document.getElementById('contas-bancarias').textContent = conciliacao.contas.length;
    }
    
    // Criar gráfico
    createFluxoChart();
}

function createFluxoChart() {
    const ctx = document.getElementById('fluxoChart');
    if (!ctx) return;
    
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['1 Dez', '5 Dez', '10 Dez', '15 Dez', '20 Dez', '25 Dez', '30 Dez'],
            datasets: [{
                label: 'Saldo',
                data: [45000, 47000, 44000, 46000, 45623, 48000, 47500],
                borderColor: '#007bff',
                backgroundColor: 'rgba(0, 123, 255, 0.1)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: false,
                    ticks: {
                        callback: function(value) {
                            return 'R$ ' + value.toLocaleString();
                        }
                    }
                }
            }
        }
    });
}

// Contas a Pagar
async function loadContasPagar() {
    const content = document.getElementById('content');
    content.innerHTML = `
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Contas a Pagar</h1>
            <button class="btn btn-primary" onclick="showNovaConta()">
                <i class="fas fa-plus me-2"></i>Nova Conta
            </button>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Fornecedor</th>
                                <th>Descrição</th>
                                <th>Valor</th>
                                <th>Vencimento</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="contas-tbody">
                            <tr><td colspan="6" class="text-center">Carregando...</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    `;
    
    const contas = await fetchAPI('/v1/contas-pagar');
    if (contas && contas.sucesso) {
        renderContasPagar(contas.contas);
    }
}

function renderContasPagar(contas) {
    const tbody = document.getElementById('contas-tbody');
    
    if (contas.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted">Nenhuma conta encontrada</td></tr>';
        return;
    }
    
    tbody.innerHTML = contas.map(conta => 
        '<tr>' +
        '<td><strong>' + conta.fornecedor + '</strong></td>' +
        '<td>' + conta.descricao + '</td>' +
        '<td><strong>R$ ' + conta.valor + '</strong></td>' +
        '<td>' + conta.vencimento + '</td>' +
        '<td><span class="badge status-badge ' + getStatusClass(conta.status) + '">' + conta.status + '</span></td>' +
        '<td>' +
        '<button class="btn btn-sm btn-outline-primary me-1" onclick="editarConta(' + conta.id + ')"><i class="fas fa-edit"></i></button>' +
        (conta.status === 'Pendente' ? '<button class="btn btn-sm btn-success me-1" onclick="pagarConta(' + conta.id + ')"><i class="fas fa-dollar-sign"></i></button>' : '') +
        '<button class="btn btn-sm btn-outline-danger" onclick="excluirConta(' + conta.id + ')"><i class="fas fa-trash"></i></button>' +
        '</td>' +
        '</tr>'
    ).join('');
}

function getStatusClass(status) {
    switch(status) {
        case 'Paga': return 'bg-success';
        case 'Pendente': return 'bg-warning';
        case 'Vencida': return 'bg-danger';
        default: return 'bg-secondary';
    }
}

// Fluxo de Caixa
async function loadFluxoCaixa() {
