async function loadMovimentacoes() {
    const movimentacoes = await fetchAPI('/FluxoCaixa/movimentacoes');
    if (movimentacoes && movimentacoes.sucesso) {
        const movimentacoesHtml = movimentacoes.movimentacoes.slice(0, 10).map(mov => 
            '<div class="d-flex justify-content-between align-items-center mb-2">' +
            '<div><strong>' + mov.descricao + '</strong><br><small class="text-muted">' + mov.categoria + '</small></div>' +
            '<div class="text-end">' +
            '<strong class="' + (mov.tipo === 'Entrada' ? 'text-success' : 'text-danger') + '">' +
            (mov.tipo === 'Entrada' ? '+' : '-') + ' ' + mov.valorFormatado +
            '</strong><br><small class="text-muted">' + mov.data + '</small></div></div><hr>'
        ).join('');
        
        document.getElementById('fluxo-movimentacoes').innerHTML = movimentacoesHtml || '<p class="text-muted">Nenhuma movimentação encontrada</p>';
    }
}

