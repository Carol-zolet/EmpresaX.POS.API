# Environment Variables Template
# Copy this to .env and fill with your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/empresax_pos

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_ISSUER=EmpresaX.POS
JWT_AUDIENCE=EmpresaX.POS.Users
JWT_EXPIRATION_MINUTES=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Serilog
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://0.0.0.0:5000

# Rate Limiting
RATELIMIT_PERMITS_PER_MINUTE=100

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@empresax.com
